package conditionalAndBooleanOperators;

public class ConditionalAndLogicalOperatorTest {

	public static void main(String[] args) {
				
		System.out.println("CONDITIONAL AND : ");
		System.out.printf("%s%b :  \n%s%b : \n%s%b : \n%s%b : ",
				"false |&& false", (false && false),
				"false && true", (false && true),
				"true && false", (true && false),
				"true && true" , (true && true));
		

		System.out.println("\nCONDITIONAL OR : ");
		System.out.printf("%s%b :  \n%s%b : \n%s%b : \n%s%b : ",
				"false || false", (false || false),
				"false || true", (false || true),
				"true || false", (true || false),
				"true || true" , (true || true));
		

		System.out.println("\nBOOLEAN AND : ");
		System.out.printf("%s%b :  \n%s%b : \n%s%b : \n%s%b : ",
				"false & false", (false & false),
				"false & true", (false & true),
				"true & false", (true & false),
				"true & true" , (true & true));
		

		System.out.println("\nBOOLEAN OR : ");
		System.out.printf("%s%b :  \n%s%b : \n%s%b : \n%s%b : ",
				"false | false", (false | false),
				"false | true", (false | true),
				"true | false", (true | false),
				"true | true" , (true | true));
	}

}
